root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{kt,kts}]
indent_size = 4
max_line_length = 120

[*.{yaml,yml}]
indent_size = 2

[*.{xml,gradle}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false
